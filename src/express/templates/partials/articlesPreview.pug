section.main-page__list.preview
  h2.visually-hidden Список превью статей
  ul.preview__list
    - for (article of articles)
      li.preview__item
        ul.preview__breadcrumbs
          - for (category of article.сategory)
            li.preview__breadcrumbs-item
              a.preview__breadcrumbs-link(href='#') #{category}
        if article.picture
          .preview__background
            img.preview__background-image(src=`/img/${article.picture.small}` width='460' height='240' srcset=`/img/${article.picture.small}, /img/${article.picture.big} 2x` alt='Фотография небоскреба')
        time.preview__time(datetime='2019-03-21T20:33') #{article.createdDate}
        h3.preview__name
          a.preview__name-link(href=`/articles/${article.id}`) #{article.title}
        p.preview__text #{article.announce}
        a.preview__comment(href='#')
          | Комментарии 
          span.preview__cloud
          |  
          b.preview__comment-count #{article.comments.length}